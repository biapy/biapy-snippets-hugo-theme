; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 80
indent_size = 2
indent_style = space

[*.html]
max_line_length = 80
indent_size = 2
indent_style = space

[COMMIT_EDITMSG]
max_line_length = 80
